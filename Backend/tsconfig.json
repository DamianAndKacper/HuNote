{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "useDefineForClassFields": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "noImplicitAny": true
    },
    "include": ["src"]
}